
alias ls="eza --group-directories-first"
alias l="ls -lah"

alias ..="cd .."
alias ...="cd ../.."

alias tree="exa --tree --long --icons"

alias rm="rm -i"
alias mv="mv -i"

alias gti="git"

# adds the correct terminal capablities when using ssh to a server that doesn't know alacratty
alias ssh='TERM=xterm-256color ssh'

alias battery="cat /sys/class/power_supply/BAT0/status && cat /sys/class/power_supply/BAT0/capacity"

