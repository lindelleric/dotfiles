#!/usr/bin bash

alias ls="eza --group-directories-first"
alias l="ls -lah"

alias ..="cd .."
alias ...="cd ../.."

alias tree="exa --tree --long --icons"

alias rm="rm -i"
alias mv="mv -i"

alias gti="git"

# adds the correct terminal capablities when using ssh to a server that doesn't know alacratty
alias ssh='TERM=xterm-256color ssh'

alias battery="cat /sys/class/power_supply/BAT0/status && cat /sys/class/power_supply/BAT0/capacity"

alias grep='grep --color=auto'

# # extract = EXtractor for all kinds of archives
# # usage: extract <file>
extract ()
{
  if [ -f $1 ] ; then
    case $1 in
      *.tar.bz2)   tar xjf $1   ;;
      *.tar.gz)    tar xzf $1   ;;
      *.bz2)       bunzip2 $1   ;;
      *.rar)       unrar x $1   ;;
      *.gz)        gunzip $1    ;;
      *.tar)       tar xf $1    ;;
      *.tbz2)      tar xjf $1   ;;
      *.tgz)       tar xzf $1   ;;
      *.zip)       unzip $1     ;;
      *.Z)         uncompress $1;;
      *.7z)        7z x $1      ;;
      *.deb)       ar x $1      ;;
      *.tar.xz)    tar xf $1    ;;
      *.tar.zst)   tar xf $1    ;;
      *)           echo "'$1' cannot be extracted via ex()" ;;
    esac
  else
    echo "'$1' is not a valid file"
  fi
}


